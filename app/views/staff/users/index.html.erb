<!-- app/views/staff/users/index.html.erb -->
<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
    <div>
      <h1 class="text-2xl lg:text-3xl font-bold text-stone-900 dark:text-stone-100">Usuários</h1>
      <p class="text-stone-600 dark:text-stone-400 mt-1">
        <% if @company %>
          Gerenciar usuários da <%= @company.name %>
        <% else %>
          Gerenciar todos os usuários do sistema
        <% end %>
      </p>
    </div>
    <div class="flex gap-3">
      <%= link_to new_staff_user_path, 
          class: "inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl transition-colors shadow-lg hover:shadow-xl" do %>
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        </svg>
        Novo Usuário
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Total</p>
          <p class="text-2xl font-bold text-stone-900 dark:text-stone-100 mt-1">
            <%= @users.count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-purple-100 dark:bg-purple-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Ativos</p>
          <p class="text-2xl font-bold text-green-600 dark:text-green-400 mt-1">
            <%= @users.where(active: true).count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-green-100 dark:bg-green-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Admins</p>
          <p class="text-2xl font-bold text-blue-600 dark:text-blue-400 mt-1">
            <%= @users.where(role: 'admin').count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Staff</p>
          <p class="text-2xl font-bold text-purple-600 dark:text-purple-400 mt-1">
            <%= @users.where(role: 'staff').count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-purple-100 dark:bg-purple-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Users List -->
  <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl shadow-sm overflow-hidden">
    <% if @users.any? %>
      <div class="overflow-x-auto">
        <div class="space-y-1">
          <% @users.each_with_index do |user, index| %>
            <div class="p-4 lg:p-6 <%= 'border-b border-stone-200 dark:border-stone-800' if index < @users.count - 1 %> hover:bg-stone-50 dark:hover:bg-stone-800/50 transition-colors">
              <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
                <div class="flex-1">
                  <div class="flex items-start gap-4">
                    <div class="flex-shrink-0">
                      <div class="w-12 h-12 lg:w-16 lg:h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center text-white font-bold text-lg lg:text-xl">
                        <%= user.first_name&.first&.upcase %><%= user.last_name&.first&.upcase %>
                      </div>
                    </div>
                    
                    <div class="flex-1">
                      <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-2 lg:gap-4">
                        <div>
                          <h3 class="text-lg font-semibold text-stone-900 dark:text-stone-100 flex items-center space-x-2">
                            <span><%= link_to user.full_name, staff_user_path(user), 
                                class: "hover:text-purple-600 dark:hover:text-purple-400 transition-colors" %></span>
                            
                            <!-- Role Badge -->
                            <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                              <%= case user.role
                                  when 'staff' then 'bg-purple-100 dark:bg-purple-950/50 text-purple-700 dark:text-purple-300'
                                  when 'admin' then 'bg-blue-100 dark:bg-blue-950/50 text-blue-700 dark:text-blue-300'
                                  when 'user' then 'bg-green-100 dark:bg-green-950/50 text-green-700 dark:text-green-300'
                                  else 'bg-stone-100 dark:bg-stone-800 text-stone-700 dark:text-stone-300'
                                  end %>">
                              <%= user.role.humanize %>
                            </span>
                            
                            <!-- Active Status -->
                            <% unless user.active? %>
                              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 dark:bg-red-950/50 text-red-700 dark:text-red-300">
                                Inativo
                              </span>
                            <% end %>
                          </h3>
                          <p class="text-sm text-stone-600 dark:text-stone-400">
                            <%= user.email %>
                          </p>
                        </div>
                        
                        <div class="lg:text-right">
                          <p class="text-sm font-medium text-stone-900 dark:text-stone-100">
                            <%= user.company&.name || "Sem clínica" %>
                          </p>
                          <p class="text-xs text-stone-500 dark:text-stone-400">
                            <%= user.phone %>
                          </p>
                        </div>
                      </div>
                      
                      <div class="mt-3 grid grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
                        <div>
                          <p class="text-stone-500 dark:text-stone-400 font-medium">Animais</p>
                          <p class="text-stone-900 dark:text-stone-100">
                            <%= user.animals.count %>
                          </p>
                        </div>
                        
                        <div>
                          <p class="text-stone-500 dark:text-stone-400 font-medium">Vacinas</p>
                          <p class="text-stone-900 dark:text-stone-100">
                            <%= user.vaccinations.count %>
                          </p>
                        </div>
                        
                        <div>
                          <p class="text-stone-500 dark:text-stone-400 font-medium">Último Login</p>
                          <p class="text-stone-900 dark:text-stone-100">
                            <%= user.current_sign_in_at&.strftime("%d/%m/%Y") || "Nunca" %>
                          </p>
                        </div>
                        
                        <div>
                          <p class="text-stone-500 dark:text-stone-400 font-medium">Cadastrado</p>
                          <p class="text-stone-900 dark:text-stone-100">
                            <%= user.created_at.strftime("%d/%m/%Y") %>
                          </p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="flex-shrink-0 flex gap-2">
                  <%= link_to staff_user_path(user), 
                      class: "inline-flex items-center px-3 py-2 bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-700 dark:text-stone-300 text-sm font-medium rounded-lg transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                    </svg>
                    Ver
                  <% end %>
                  
                  <%= link_to edit_staff_user_path(user), 
                      class: "inline-flex items-center px-3 py-2 bg-purple-100 dark:bg-purple-950/50 hover:bg-purple-200 dark:hover:bg-purple-900/50 text-purple-700 dark:text-purple-300 text-sm font-medium rounded-lg transition-colors" do %>
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5"/>
                    </svg>
                    Editar
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <div class="w-24 h-24 bg-stone-100 dark:bg-stone-800 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-12 h-12 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-stone-900 dark:text-stone-100 mb-2">
          Nenhum usuário encontrado
        </h3>
        <p class="text-stone-600 dark:text-stone-400 mb-6">
          Comece criando o primeiro usuário.
        </p>
        <%= link_to new_staff_user_path, 
            class: "inline-flex items-center px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
          Criar Primeiro Usuário
        <% end %>
      </div>
    <% end %>
  </div>
</div>