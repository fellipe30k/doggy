<!-- app/views/vaccinations/index.html.erb - MELHORADA -->
<div class="space-y-6">
  <!-- Header com filtros -->
  <div class="bg-gradient-to-r from-green-600 to-green-700 dark:from-green-700 dark:to-green-800 rounded-2xl p-6 lg:p-8 text-white shadow-lg">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <div>
        <h1 class="text-2xl lg:text-3xl font-bold mb-2">
          üíâ Hist√≥rico de Vacina√ß√µes
        </h1>
        <p class="text-green-100 lg:text-lg">Controle completo das vacina√ß√µes aplicadas</p>
      </div>
      
      <div class="flex gap-3">
        <%= link_to new_vaccination_path, 
            class: "inline-flex items-center px-4 py-2 bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white font-medium rounded-xl border border-white/30 transition-all shadow-lg hover:shadow-xl" do %>
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
          Nova Vacina√ß√£o
        <% end %>
      </div>
    </div>
  </div>

  <!-- Filtros R√°pidos -->
  <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
    <div class="flex flex-wrap gap-2">
      <%= link_to vaccinations_path, 
          class: "inline-flex items-center px-3 py-1.5 bg-green-100 dark:bg-green-950/50 text-green-700 dark:text-green-300 text-sm font-medium rounded-lg transition-colors #{'ring-2 ring-green-500' if params[:filter].blank?}" do %>
        <span class="w-2 h-2 bg-green-500 rounded-full mr-2"></span>
        Todas
      <% end %>
      
      <%= link_to vaccinations_path(filter: 'recent'), 
          class: "inline-flex items-center px-3 py-1.5 bg-blue-100 dark:bg-blue-950/50 text-blue-700 dark:text-blue-300 text-sm font-medium rounded-lg hover:bg-blue-200 dark:hover:bg-blue-900/50 transition-colors #{'ring-2 ring-blue-500' if params[:filter] == 'recent'}" do %>
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
        Este M√™s
      <% end %>
      
      <%= link_to vaccinations_path(filter: 'overdue'), 
          class: "inline-flex items-center px-3 py-1.5 bg-red-100 dark:bg-red-950/50 text-red-700 dark:text-red-300 text-sm font-medium rounded-lg hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors #{'ring-2 ring-red-500' if params[:filter] == 'overdue'}" do %>
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        Atrasadas
      <% end %>
      
      <%= link_to vaccinations_path(filter: 'due_soon'), 
          class: "inline-flex items-center px-3 py-1.5 bg-yellow-100 dark:bg-yellow-950/50 text-yellow-700 dark:text-yellow-300 text-sm font-medium rounded-lg hover:bg-yellow-200 dark:hover:bg-yellow-900/50 transition-colors #{'ring-2 ring-yellow-500' if params[:filter] == 'due_soon'}" do %>
        <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
        </svg>
        Pr√≥ximas
      <% end %>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Total</p>
          <p class="text-2xl font-bold text-stone-900 dark:text-stone-100 mt-1">
            <%= number_with_delimiter(@vaccinations&.count || 0) %>
          </p>
        </div>
        <div class="w-12 h-12 bg-green-100 dark:bg-green-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Este M√™s</p>
          <p class="text-2xl font-bold text-blue-600 dark:text-blue-400 mt-1">
            <%= number_with_delimiter(@vaccinations&.where('application_date >= ?', Date.current.beginning_of_month)&.count || 0) %>
          </p>
        </div>
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Pr√≥ximas</p>
          <p class="text-2xl font-bold text-yellow-600 dark:text-yellow-400 mt-1">
            <%= number_with_delimiter(@vaccinations&.where('next_dose_date BETWEEN ? AND ?', Date.current, Date.current + 30.days)&.count || 0) %>
          </p>
        </div>
        <div class="w-12 h-12 bg-yellow-100 dark:bg-yellow-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Atrasadas</p>
          <p class="text-2xl font-bold text-red-600 dark:text-red-400 mt-1">
            <%= number_with_delimiter(@vaccinations&.where('next_dose_date < ?', Date.current)&.where&.not(next_dose_date: nil)&.count || 0) %>
          </p>
        </div>
        <div class="w-12 h-12 bg-red-100 dark:bg-red-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-red-600 dark:text-red-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm3.5 6L12 10.5 8.5 8 12 5.5 15.5 8zM12 13.5l3.5 2.5L12 18.5 8.5 16 12 13.5z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista de Vacina√ß√µes -->
  <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl shadow-sm overflow-hidden">
    <% if @vaccinations&.any? %>
      <div class="space-y-1">
        <% @vaccinations.each_with_index do |vaccination, index| %>
          <div class="p-4 lg:p-6 <%= 'border-b border-stone-200 dark:border-stone-800' if index < @vaccinations.count - 1 %> hover:bg-stone-50 dark:hover:bg-stone-800/50 transition-colors">
            <%= render 'vaccination_card', vaccination: vaccination %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="p-12 text-center">
        <div class="w-24 h-24 bg-stone-100 dark:bg-stone-800 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-12 h-12 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
          </svg>
        </div>
        <h3 class="text-xl font-semibold text-stone-900 dark:text-stone-100 mb-2">
          Nenhuma vacina√ß√£o encontrada
        </h3>
        <p class="text-stone-600 dark:text-stone-400 mb-6">
          Comece registrando a primeira vacina√ß√£o dos animais.
        </p>
        <%= link_to new_vaccination_path, 
            class: "inline-flex items-center px-6 py-3 bg-green-600 hover:bg-green-700 text-white font-medium rounded-xl transition-colors shadow-lg hover:shadow-xl" do %>
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
          Registrar Primeira Vacina√ß√£o
        <% end %>
      </div>
    <% end %>
  </div>
</div>
