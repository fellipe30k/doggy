<!-- app/views/vaccinations/_vaccination_card.html.erb - NOVO PARTIAL -->
<div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
  <div class="flex-1">
    <div class="flex items-start gap-4">
      <!-- Animal Photo -->
      <div class="flex-shrink-0">
        <% if vaccination.animal.photo.attached? %>
          <%= image_tag vaccination.animal.photo, class: "w-16 h-16 lg:w-20 lg:h-20 rounded-xl object-cover shadow-md" %>
        <% else %>
          <div class="w-16 h-16 lg:w-20 lg:h-20 bg-gradient-to-br from-stone-200 to-stone-300 dark:from-stone-700 dark:to-stone-800 rounded-xl flex items-center justify-center shadow-md">
            <svg class="w-8 h-8 lg:w-10 lg:h-10 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
            </svg>
          </div>
        <% end %>
      </div>
      
      <!-- Vaccination Info -->
      <div class="flex-1 min-w-0">
        <div class="flex flex-col lg:flex-row lg:items-start lg:justify-between gap-2 lg:gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-2">
              <h3 class="text-lg font-bold text-stone-900 dark:text-stone-100">
                <%= link_to vaccination.animal.name, animal_path(vaccination.animal), 
                    class: "hover:text-green-600 dark:hover:text-green-400 transition-colors" %>
              </h3>
              
              <!-- Status Badge -->
              <% if vaccination.next_dose_date %>
                <% if vaccination.overdue? %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 dark:bg-red-950/50 text-red-700 dark:text-red-300">
                    ‚ö†Ô∏è Atrasada
                  </span>
                <% elsif vaccination.next_dose_date <= 30.days.from_now %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-950/50 text-yellow-700 dark:text-yellow-300">
                    ‚è∞ Pr√≥xima
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 dark:bg-green-950/50 text-green-700 dark:text-green-300">
                    ‚úÖ Em dia
                  </span>
                <% end %>
              <% end %>
            </div>
            
            <p class="text-sm text-stone-600 dark:text-stone-400 mb-3">
              <%= vaccination.animal.species %> ‚Ä¢ <%= vaccination.animal.breed %>
            </p>
            
            <!-- Vaccine Details -->
            <div class="bg-stone-50 dark:bg-stone-800/50 rounded-lg p-3 mb-3">
              <div class="flex items-center gap-2 mb-2">
                <div class="w-8 h-8 bg-green-100 dark:bg-green-950/50 rounded-lg flex items-center justify-center">
                  <span class="text-green-600 dark:text-green-400 text-sm">üíâ</span>
                </div>
                <div>
                  <h4 class="font-semibold text-stone-900 dark:text-stone-100">
                    <%= vaccination.vaccine_name %>
                  </h4>
                  <p class="text-sm text-stone-600 dark:text-stone-400">
                    <%= vaccination.vaccine_brand %>
                  </p>
                </div>
              </div>
            </div>
            
            <!-- Vaccination Details Grid -->
            <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 text-sm">
              <div>
                <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Aplica√ß√£o</p>
                <p class="text-stone-900 dark:text-stone-100 font-medium">
                  <%= vaccination.application_date.strftime("%d/%m/%Y") %>
                </p>
              </div>
              
              <% if vaccination.next_dose_date %>
                <div>
                  <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Pr√≥xima Dose</p>
                  <p class="text-stone-900 dark:text-stone-100 font-medium <%= 'text-red-600 dark:text-red-400' if vaccination.overdue? %>">
                    <%= vaccination.next_dose_date.strftime("%d/%m/%Y") %>
                    <% if vaccination.overdue? %>
                      <span class="text-xs">(Atrasada)</span>
                    <% end %>
                  </p>
                </div>
              <% end %>
              
              <div>
                <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Veterin√°rio</p>
                <p class="text-stone-900 dark:text-stone-100 font-medium">
                  <%= vaccination.veterinarian_name %>
                </p>
              </div>
              
              <div>
                <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Lote</p>
                <p class="text-stone-900 dark:text-stone-100 font-mono text-xs font-medium">
                  <%= vaccination.batch_number %>
                </p>
              </div>
            </div>
            
            <% if vaccination.observations.present? %>
              <div class="mt-3 pt-3 border-t border-stone-200 dark:border-stone-800">
                <p class="text-stone-500 dark:text-stone-400 font-medium text-sm mb-1">Observa√ß√µes</p>
                <div class="bg-blue-50 dark:bg-blue-950/30 rounded-lg p-3">
                  <p class="text-stone-700 dark:text-stone-300 text-sm">
                    <%= simple_format(vaccination.observations) %>
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Actions -->
  <div class="flex-shrink-0 flex gap-2">
    <%= link_to vaccination_path(vaccination), 
        class: "inline-flex items-center px-3 py-2 bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-700 dark:text-stone-300 text-sm font-medium rounded-lg transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
      </svg>
      Ver
    <% end %>
    
    <%= link_to edit_vaccination_path(vaccination), 
        class: "inline-flex items-center px-3 py-2 bg-green-100 dark:bg-green-950/50 hover:bg-green-200 dark:hover:bg-green-900/50 text-green-700 dark:text-green-300 text-sm font-medium rounded-lg transition-colors" do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
      </svg>
      Editar
    <% end %>
    
    <%= button_to vaccination_path(vaccination), method: :delete,
        class: "inline-flex items-center px-3 py-2 bg-red-100 dark:bg-red-950/50 hover:bg-red-200 dark:hover:bg-red-900/50 text-red-700 dark:text-red-300 text-sm font-medium rounded-lg transition-colors",
        confirm: "Tem certeza que deseja excluir esta vacina√ß√£o?",
        form: { style: "display: inline;" } do %>
      <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
      </svg>
      Excluir
    <% end %>
  </div>
</div>
