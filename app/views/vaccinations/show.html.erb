
<!-- app/views/vaccinations/show.html.erb -->
<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to vaccinations_path, 
          class: "p-2 bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-xl hover:bg-stone-50 dark:hover:bg-stone-800 transition-colors" do %>
        <svg class="w-5 h-5 text-stone-600 dark:text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-stone-900 dark:text-stone-100">Detalhes da Vacina√ß√£o</h1>
        <p class="text-stone-600 dark:text-stone-400 mt-1">
          <span class="font-medium"><%= @vaccination.animal.name %></span> ‚Ä¢ <%= @vaccination.vaccine_name %>
        </p>
      </div>
    </div>
    
    <div class="flex gap-2">
      <%= link_to edit_vaccination_path(@vaccination), 
          class: "inline-flex items-center px-4 py-2 bg-green-100 dark:bg-green-950/50 hover:bg-green-200 dark:hover:bg-green-900/50 text-green-700 dark:text-green-300 font-medium rounded-xl transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar Vacina√ß√£o
      <% end %>
      
      <%= button_to vaccination_path(@vaccination), method: :delete, 
          class: "inline-flex items-center px-4 py-2 bg-red-100 dark:bg-red-950/50 hover:bg-red-200 dark:hover:bg-red-900/50 text-red-700 dark:text-red-300 font-medium rounded-xl transition-colors",
          confirm: "Tem certeza que deseja excluir esta vacina√ß√£o?",
          form: { style: "display: inline;" } do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Excluir
      <% end %>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Animal Info -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Animal Card -->
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-4 flex items-center">
          <span class="w-8 h-8 bg-blue-100 dark:bg-blue-950/50 rounded-lg flex items-center justify-center mr-2">
            üêï
          </span>
          Animal
        </h2>
        
        <div class="text-center mb-4">
          <% if @vaccination.animal.photo.attached? %>
            <%= image_tag @vaccination.animal.photo, class: "w-24 h-24 rounded-2xl object-cover mx-auto shadow-lg" %>
          <% else %>
            <div class="w-24 h-24 bg-gradient-to-br from-stone-200 to-stone-300 dark:from-stone-700 dark:to-stone-800 rounded-2xl flex items-center justify-center mx-auto shadow-lg">
              <svg class="w-12 h-12 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
              </svg>
            </div>
          <% end %>
        </div>
        
        <div class="text-center mb-4">
          <h3 class="text-xl font-bold text-stone-900 dark:text-stone-100">
            <%= link_to @vaccination.animal.name, animal_path(@vaccination.animal), 
                class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors" %>
          </h3>
          <p class="text-stone-600 dark:text-stone-400 mt-1">
            <%= @vaccination.animal.species %> ‚Ä¢ <%= @vaccination.animal.breed %>
          </p>
        </div>
        
        <div class="space-y-3 text-sm">
          <div class="flex justify-between">
            <span class="text-stone-500 dark:text-stone-400 font-medium">Idade:</span>
            <span class="text-stone-900 dark:text-stone-100 font-medium"><%= @vaccination.animal.age_in_years %> anos</span>
          </div>
          <div class="flex justify-between">
            <span class="text-stone-500 dark:text-stone-400 font-medium">Peso:</span>
            <span class="text-stone-900 dark:text-stone-100 font-medium"><%= number_with_precision(@vaccination.animal.weight, precision: 1) %> kg</span>
          </div>
          <% if @vaccination.animal.owner_name.present? %>
            <div class="pt-3 border-t border-stone-200 dark:border-stone-800">
              <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Propriet√°rio:</p>
              <p class="text-stone-900 dark:text-stone-100 font-medium"><%= @vaccination.animal.owner_name %></p>
              <% if @vaccination.animal.owner_phone.present? %>
                <p class="text-stone-600 dark:text-stone-400 text-sm mt-1"><%= @vaccination.animal.owner_phone %></p>
              <% end %>
            </div>
          <% end %>
        </div>
        
        <!-- Quick Actions -->
        <div class="mt-4 pt-4 border-t border-stone-200 dark:border-stone-800">
          <%= link_to animal_path(@vaccination.animal), 
              class: "w-full inline-flex items-center justify-center px-4 py-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Ver Perfil Completo
          <% end %>
        </div>
      </div>

      <!-- Status Card -->
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-4 flex items-center">
          <span class="w-8 h-8 bg-green-100 dark:bg-green-950/50 rounded-lg flex items-center justify-center mr-2">
            ‚è±Ô∏è
          </span>
          Status
        </h2>
        
        <% if @vaccination.next_dose_date %>
          <% if @vaccination.overdue? %>
            <div class="bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-800 rounded-lg p-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-red-600 dark:text-red-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="text-red-800 dark:text-red-200 font-semibold">Pr√≥xima dose atrasada</p>
                  <p class="text-red-700 dark:text-red-300 text-sm">
                    Venceu em <%= @vaccination.next_dose_date.strftime("%d/%m/%Y") %>
                  </p>
                </div>
              </div>
            </div>
          <% elsif @vaccination.next_dose_date <= 30.days.from_now %>
            <div class="bg-yellow-50 dark:bg-yellow-950/30 border border-yellow-200 dark:border-yellow-800 rounded-lg p-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-yellow-600 dark:text-yellow-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="text-yellow-800 dark:text-yellow-200 font-semibold">Pr√≥xima dose em breve</p>
                  <p class="text-yellow-700 dark:text-yellow-300 text-sm">
                    Agendar para <%= @vaccination.next_dose_date.strftime("%d/%m/%Y") %>
                  </p>
                </div>
              </div>
            </div>
          <% else %>
            <div class="bg-green-50 dark:bg-green-950/30 border border-green-200 dark:border-green-800 rounded-lg p-4">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-600 dark:text-green-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <div>
                  <p class="text-green-800 dark:text-green-200 font-semibold">Vacina√ß√£o em dia</p>
                  <p class="text-green-700 dark:text-green-300 text-sm">
                    Pr√≥xima dose: <%= @vaccination.next_dose_date.strftime("%d/%m/%Y") %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="bg-blue-50 dark:bg-blue-950/30 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
            <div class="flex items-center">
              <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
              </svg>
              <div>
                <p class="text-blue-800 dark:text-blue-200 font-semibold">Dose √∫nica</p>
                <p class="text-blue-700 dark:text-blue-300 text-sm">N√£o h√° pr√≥xima dose programada</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Vaccination Details -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Main Details -->
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <h2 class="text-xl font-bold text-stone-900 dark:text-stone-100 mb-6 flex items-center">
          <span class="w-10 h-10 bg-green-100 dark:bg-green-950/50 rounded-lg flex items-center justify-center mr-3">
            üíâ
          </span>
          Detalhes da Vacina√ß√£o
        </h2>
        
        <!-- Vaccine Info Hero -->
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 dark:from-green-950/50 dark:to-emerald-950/50 border border-green-200 dark:border-green-800 rounded-2xl p-6 mb-6">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="text-2xl font-bold text-green-900 dark:text-green-100 mb-2">
                <%= @vaccination.vaccine_name %>
              </h3>
              <p class="text-green-700 dark:text-green-300 text-lg font-medium">
                <%= @vaccination.vaccine_brand %>
              </p>
            </div>
            <div class="text-right">
              <p class="text-green-600 dark:text-green-400 text-sm font-medium">Aplicada em</p>
              <p class="text-2xl font-bold text-green-900 dark:text-green-100">
                <%= @vaccination.application_date.strftime("%d/%m/%Y") %>
              </p>
            </div>
          </div>
        </div>
        
        <!-- Details Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="space-y-4">
            <div class="bg-stone-50 dark:bg-stone-800/50 rounded-xl p-4">
              <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Data de Aplica√ß√£o</p>
              <p class="text-xl font-bold text-stone-900 dark:text-stone-100">
                <%= @vaccination.application_date.strftime("%d de %B de %Y") %>
              </p>
              <p class="text-stone-600 dark:text-stone-400 text-sm mt-1">
                <%= time_ago_in_words(@vaccination.application_date) %> atr√°s
              </p>
            </div>
            
            <% if @vaccination.next_dose_date %>
              <div class="bg-stone-50 dark:bg-stone-800/50 rounded-xl p-4">
                <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Pr√≥xima Dose</p>
                <p class="text-xl font-bold <%= @vaccination.overdue? ? 'text-red-600 dark:text-red-400' : 'text-stone-900 dark:text-stone-100' %>">
                  <%= @vaccination.next_dose_date.strftime("%d de %B de %Y") %>
                </p>
                <p class="text-stone-600 dark:text-stone-400 text-sm mt-1">
                  <% if @vaccination.overdue? %>
                    <%= time_ago_in_words(@vaccination.next_dose_date) %> atrasada
                  <% else %>
                    Em <%= distance_of_time_in_words(Date.current, @vaccination.next_dose_date) %>
                  <% end %>
                </p>
              </div>
            <% end %>
            
            <div class="bg-stone-50 dark:bg-stone-800/50 rounded-xl p-4">
              <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Veterin√°rio Respons√°vel</p>
              <p class="text-lg font-semibold text-stone-900 dark:text-stone-100">
                <%= @vaccination.veterinarian_name %>
              </p>
            </div>
          </div>
          
          <div class="space-y-4">
            <div class="bg-stone-50 dark:bg-stone-800/50 rounded-xl p-4">
              <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">N√∫mero do Lote</p>
              <p class="text-lg font-bold text-stone-900 dark:text-stone-100 font-mono">
                <%= @vaccination.batch_number %>
              </p>
            </div>
            
            <div class="bg-stone-50 dark:bg-stone-800/50 rounded-xl p-4">
              <p class="text-stone-500 dark:text-stone-400 font-medium mb-1">Registrado por</p>
              <p class="text-lg font-semibold text-stone-900 dark:text-stone-100">
                <%= @vaccination.user.full_name %>
              </p>
              <p class="text-stone-600 dark:text-stone-400 text-sm mt-1">
                <%= @vaccination.created_at.strftime("%d/%m/%Y √†s %H:%M") %>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Observations -->
      <% if @vaccination.observations.present? %>
        <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
          <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-4 flex items-center">
            <span class="w-8 h-8 bg-blue-100 dark:bg-blue-950/50 rounded-lg flex items-center justify-center mr-2">
              üìù
            </span>
            Observa√ß√µes
          </h2>
          <div class="bg-blue-50 dark:bg-blue-950/30 border border-blue-200 dark:border-blue-800 rounded-xl p-4">
            <div class="prose prose-sm max-w-none dark:prose-invert">
              <%= simple_format(@vaccination.observations, class: "text-stone-700 dark:text-stone-300 leading-relaxed") %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Timeline Card -->
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-4 flex items-center">
          <span class="w-8 h-8 bg-purple-100 dark:bg-purple-950/50 rounded-lg flex items-center justify-center mr-2">
            üìÖ
          </span>
          Hist√≥rico do Animal
        </h2>
        
        <% other_vaccinations = @vaccination.animal.vaccinations.where.not(id: @vaccination.id).recent.limit(5) %>
        <% if other_vaccinations.any? %>
          <div class="space-y-3">
            <% other_vaccinations.each do |vacc| %>
              <div class="flex items-center gap-3 p-3 bg-stone-50 dark:bg-stone-800/50 rounded-lg">
                <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0"></div>
                <div class="flex-1">
                  <p class="font-medium text-stone-900 dark:text-stone-100"><%= vacc.vaccine_name %></p>
                  <p class="text-sm text-stone-600 dark:text-stone-400"><%= vacc.application_date.strftime("%d/%m/%Y") %></p>
                </div>
                <%= link_to vaccination_path(vacc), 
                    class: "text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm font-medium" do %>
                  Ver ‚Üí
                <% end %>
              </div>
            <% end %>
            
            <div class="text-center pt-3">
              <%= link_to animal_path(@vaccination.animal), 
                  class: "text-blue-600 dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 text-sm font-medium" do %>
                Ver hist√≥rico completo ‚Üí
              <% end %>
            </div>
          </div>
        <% else %>
          <p class="text-stone-600 dark:text-stone-400 text-center py-4">
            Esta √© a primeira vacina√ß√£o registrada para <%= @vaccination.animal.name %>.
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
