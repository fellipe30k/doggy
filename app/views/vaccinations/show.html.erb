<!-- app/views/vaccinations/show.html.erb -->
<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to vaccinations_path, 
          class: "p-2 bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-xl hover:bg-stone-50 dark:hover:bg-stone-800 transition-colors" do %>
        <svg class="w-5 h-5 text-stone-600 dark:text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-stone-900 dark:text-stone-100">Detalhes da Vacinação</h1>
        <p class="text-stone-600 dark:text-stone-400 mt-1">
          Informações completas sobre a vacinação
        </p>
      </div>
    </div>
    
    <div class="flex gap-2">
      <%= link_to edit_vaccination_path(@vaccination), 
          class: "inline-flex items-center px-4 py-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 font-medium rounded-xl transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
      
      <%= button_to vaccination_path(@vaccination), method: :delete, 
          class: "inline-flex items-center px-4 py-2 bg-red-100 dark:bg-red-950/50 hover:bg-red-200 dark:hover:bg-red-900/50 text-red-700 dark:text-red-300 font-medium rounded-xl transition-colors",
          confirm: "Tem certeza que deseja excluir esta vacinação?" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Excluir
      <% end %>
    </div>
  </div>

  <!-- Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Animal Info -->
    <div class="lg:col-span-1">
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-4">Animal</h2>
        
        <div class="text-center mb-4">
          <% if @vaccination.animal.photo.attached? %>
            <%= image_tag @vaccination.animal.photo, class: "w-20 h-20 rounded-xl object-cover mx-auto" %>
          <% else %>
            <div class="w-20 h-20 bg-stone-200 dark:bg-stone-700 rounded-xl flex items-center justify-center mx-auto">
              <svg class="w-10 h-10 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
              </svg>
            </div>
          <% end %>
        </div>
        
        <div class="text-center">
          <h3 class="text-xl font-bold text-stone-900 dark:text-stone-100">
            <%= link_to @vaccination.animal.name, animal_path(@vaccination.animal), 
                class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors" %>
          </h3>
          <p class="text-stone-600 dark:text-stone-400 mt-1">
            <%= @vaccination.animal.species %> • <%= @vaccination.animal.breed %>
          </p>
          <p class="text-sm text-stone-500 dark:text-stone-400 mt-2">
            <%= @vaccination.animal.age_in_years %> anos • 
            <%= number_with_precision(@vaccination.animal.weight, precision: 1) %>kg
          </p>
        </div>
      </div>
    </div>

    <!-- Vaccination Details -->
    <div class="lg:col-span-2">
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-6">Detalhes da Vacinação</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Nome da Vacina</p>
            <p class="text-lg text-stone-900 dark:text-stone-100 font-semibold">
              <%= @vaccination.vaccine_name %>
            </p>
          </div>
          
          <div>
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Marca/Laboratório</p>
            <p class="text-lg text-stone-900 dark:text-stone-100">
              <%= @vaccination.vaccine_brand %>
            </p>
          </div>
          
          <div>
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Data de Aplicação</p>
            <p class="text-lg text-stone-900 dark:text-stone-100">
              <%= @vaccination.application_date.strftime("%d/%m/%Y") %>
            </p>
          </div>
          
          <% if @vaccination.next_dose_date %>
            <div>
              <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Próxima Dose</p>
              <p class="text-lg <%= @vaccination.overdue? ? 'text-red-600 dark:text-red-400 font-semibold' : 'text-stone-900 dark:text-stone-100' %>">
                <%= @vaccination.next_dose_date.strftime("%d/%m/%Y") %>
                <% if @vaccination.overdue? %>
                  <span class="text-sm font-normal">(Atrasada)</span>
                <% end %>
              </p>
            </div>
          <% end %>
          
          <div>
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Veterinário Responsável</p>
            <p class="text-lg text-stone-900 dark:text-stone-100">
              <%= @vaccination.veterinarian_name %>
            </p>
          </div>
          
          <div>
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Número do Lote</p>
            <p class="text-lg text-stone-900 dark:text-stone-100 font-mono">
              <%= @vaccination.batch_number %>
            </p>
          </div>
        </div>
        
        <% if @vaccination.observations.present? %>
          <div class="mt-6 pt-6 border-t border-stone-200 dark:border-stone-800">
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-2">Observações</p>
            <div class="bg-stone-50 dark:bg-stone-800/50 rounded-xl p-4">
              <p class="text-stone-700 dark:text-stone-300 leading-relaxed">
                <%= simple_format(@vaccination.observations) %>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>