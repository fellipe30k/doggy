<!-- app/views/vaccinations/new.html.erb -->
<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center gap-4">
    <%= link_to vaccinations_path, 
        class: "p-2 bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-xl hover:bg-stone-50 dark:hover:bg-stone-800 transition-colors" do %>
      <svg class="w-5 h-5 text-stone-600 dark:text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
    <% end %>
    <div>
      <h1 class="text-2xl lg:text-3xl font-bold text-stone-900 dark:text-stone-100">Nova Vacinação</h1>
      <p class="text-stone-600 dark:text-stone-400 mt-1">Registrar nova vacinação para um animal</p>
    </div>
  </div>

  <!-- Form -->
  <%= render "form", vaccination: @vaccination %>
</div>