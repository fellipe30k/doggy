<!-- app/views/layouts/staff.html.erb -->
<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <title>Doggy Staff - Administração</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="theme-color" content="#0c0a09">
    
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script>
      tailwind.config = {
        darkMode: 'class',
        theme: {
          extend: {
            colors: {
              stone: {
                50: '#fafaf9', 100: '#f5f5f4', 200: '#e7e5e4', 300: '#d6d3d1',
                400: '#a8a29e', 500: '#78716c', 600: '#57534e', 700: '#44403c',
                800: '#292524', 900: '#1c1917', 950: '#0c0a09'
              }
            }
          }
        }
      }
      
      function toggleDarkMode() {
        const html = document.documentElement;
        const isDark = html.classList.contains('dark');
        if (isDark) {
          html.classList.remove('dark');
          localStorage.setItem('darkMode', 'false');
        } else {
          html.classList.add('dark');
          localStorage.setItem('darkMode', 'true');
        }
      }
      
      document.addEventListener('DOMContentLoaded', function() {
        const darkMode = localStorage.getItem('darkMode');
        const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        if (darkMode === 'true' || (darkMode === null && prefersDark)) {
          document.documentElement.classList.add('dark');
        }
      });
    </script>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-stone-50 dark:bg-stone-950 text-stone-900 dark:text-stone-100 min-h-screen transition-colors duration-300">
    <!-- Staff Header -->
    <header class="bg-white dark:bg-stone-900 border-b border-stone-200 dark:border-stone-800 sticky top-0 z-50">
      <div class="px-6 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="flex items-center space-x-2">
              <div class="w-8 h-8 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <h1 class="text-xl font-bold bg-gradient-to-r from-purple-600 to-purple-700 dark:from-purple-400 dark:to-purple-500 bg-clip-text text-transparent">
                  Doggy Staff
                </h1>
                <p class="text-xs text-stone-500 dark:text-stone-400">Painel Administrativo</p>
              </div>
            </div>
          </div>

          <div class="flex items-center space-x-3">
            <!-- Dark Mode Toggle -->
            <button onclick="toggleDarkMode()" class="p-2 rounded-lg bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 transition-colors">
              <svg class="w-5 h-5 hidden dark:block" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"/>
              </svg>
              <svg class="w-5 h-5 dark:hidden" fill="currentColor" viewBox="0 0 20 20">
                <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"/>
              </svg>
            </button>

            <!-- Back to App -->
            <%= link_to root_path, 
                class: "inline-flex items-center px-3 py-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 text-sm font-medium rounded-lg transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Voltar ao App
            <% end %>

            <!-- User Info -->
            <div class="text-right">
              <div class="text-sm font-medium text-stone-900 dark:text-stone-100"><%= current_user.full_name %></div>
              <div class="text-xs text-purple-600 dark:text-purple-400 font-semibold">STAFF</div>
            </div>

            <!-- Logout -->
            <%= link_to destroy_user_session_path, method: :delete, 
                class: "p-2 rounded-lg bg-red-100 dark:bg-red-900/30 hover:bg-red-200 dark:hover:bg-red-900/50 text-red-600 dark:text-red-400 transition-colors",
                confirm: "Tem certeza que deseja sair?" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </header>

    <!-- Navigation -->
    <nav class="bg-white dark:bg-stone-900 border-b border-stone-200 dark:border-stone-800">
      <div class="px-6 py-3">
        <div class="flex space-x-6">
          <%= link_to staff_companies_path, 
              class: "flex items-center space-x-2 px-3 py-2 text-sm font-medium rounded-lg transition-colors #{'bg-purple-100 dark:bg-purple-950/50 text-purple-700 dark:text-purple-300' if request.path.include?('/staff/companies')} #{'text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100 dark:hover:bg-stone-800' unless request.path.include?('/staff/companies')}" do %>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"/>
            </svg>
            <span>Clínicas</span>
          <% end %>

          <%= link_to staff_users_path, 
              class: "flex items-center space-x-2 px-3 py-2 text-sm font-medium rounded-lg transition-colors #{'bg-purple-100 dark:bg-purple-950/50 text-purple-700 dark:text-purple-300' if request.path.include?('/staff/users')} #{'text-stone-600 dark:text-stone-400 hover:text-stone-900 dark:hover:text-stone-100 hover:bg-stone-100 dark:hover:bg-stone-800' unless request.path.include?('/staff/users')}" do %>
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2zm4 18v-6h2.5l-2.54-7.63A3.01 3.01 0 0 0 16.98 7H15.2c-.39 0-.74.23-.9.59L12.8 11h-1.6l-1.5-3.41c-.16-.36-.51-.59-.9-.59H7.02a3.01 3.01 0 0 0-2.98 1.37L1.5 16H4v6h4v-6h2v6h4z"/>
            </svg>
            <span>Usuários</span>
          <% end %>
        </div>
      </div>
    </nav>

    <main class="p-6">
      <%= render 'shared/flash_messages' if notice || alert %>
      <%= yield %>
    </main>
  </body>
</html>

<!-- app/views/staff/companies/index.html.erb -->
<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
    <div>
      <h1 class="text-2xl lg:text-3xl font-bold text-stone-900 dark:text-stone-100">Clínicas</h1>
      <p class="text-stone-600 dark:text-stone-400 mt-1">Gerenciar todas as clínicas do sistema</p>
    </div>
    <div class="flex gap-3">
      <%= link_to new_staff_company_path, 
          class: "inline-flex items-center px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl transition-colors shadow-lg hover:shadow-xl" do %>
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        </svg>
        Nova Clínica
      <% end %>
    </div>
  </div>

  <!-- Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Total</p>
          <p class="text-2xl font-bold text-stone-900 dark:text-stone-100 mt-1">
            <%= @companies.count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-purple-100 dark:bg-purple-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-purple-600 dark:text-purple-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 7V3H2v18h20V7H12z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Ativas</p>
          <p class="text-2xl font-bold text-green-600 dark:text-green-400 mt-1">
            <%= @companies.where(active: true).count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-green-100 dark:bg-green-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Usuários</p>
          <p class="text-2xl font-bold text-stone-900 dark:text-stone-100 mt-1">
            <%= User.joins(:company).where(companies: { id: @companies.pluck(:id) }).count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-blue-100 dark:bg-blue-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M16 4c0-1.11.89-2 2-2s2 .89 2 2-.89 2-2 2-2-.89-2-2z"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 shadow-sm">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-sm text-stone-600 dark:text-stone-400 font-medium">Animais</p>
          <p class="text-2xl font-bold text-stone-900 dark:text-stone-100 mt-1">
            <%= Animal.joins(:company).where(companies: { id: @companies.pluck(:id) }).count %>
          </p>
        </div>
        <div class="w-12 h-12 bg-orange-100 dark:bg-orange-950/50 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-orange-600 dark:text-orange-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Companies Grid -->
  <div class="grid gap-6 lg:grid-cols-2 xl:grid-cols-3">
    <% @companies.each do |company| %>
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm hover:shadow-lg transition-all">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <div class="flex items-center space-x-2 mb-2">
              <h3 class="text-lg font-bold text-stone-900 dark:text-stone-100">
                <%= link_to company.name, staff_company_path(company), 
                    class: "hover:text-purple-600 dark:hover:text-purple-400 transition-colors" %>
              </h3>
              <% if company.active? %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 dark:bg-green-950/50 text-green-700 dark:text-green-300">
                  Ativa
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-red-100 dark:bg-red-950/50 text-red-700 dark:text-red-300">
                  Inativa
                </span>
              <% end %>
            </div>
            <p class="text-sm text-stone-600 dark:text-stone-400 mb-1">
              CNPJ: <%= company.cnpj %>
            </p>
            <p class="text-sm text-stone-600 dark:text-stone-400">
              <%= company.email %>
            </p>
          </div>
        </div>

        <!-- Stats -->
        <div class="grid grid-cols-3 gap-4 mb-4 py-4 border-y border-stone-200 dark:border-stone-800">
          <div class="text-center">
            <p class="text-xl font-bold text-stone-900 dark:text-stone-100">
              <%= company.users.count %>
            </p>
            <p class="text-xs text-stone-500 dark:text-stone-400">Usuários</p>
          </div>
          <div class="text-center">
            <p class="text-xl font-bold text-stone-900 dark:text-stone-100">
              <%= company.animals.count %>
            </p>
            <p class="text-xs text-stone-500 dark:text-stone-400">Animais</p>
          </div>
          <div class="text-center">
            <p class="text-xl font-bold text-stone-900 dark:text-stone-100">
              <%= company.vaccinations.count %>
            </p>
            <p class="text-xs text-stone-500 dark:text-stone-400">Vacinas</p>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex gap-2">
          <%= link_to staff_company_path(company), 
              class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-700 dark:text-stone-300 text-sm font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Ver
          <% end %>

          <%= link_to edit_staff_company_path(company), 
              class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-purple-100 dark:bg-purple-950/50 hover:bg-purple-200 dark:hover:bg-purple-900/50 text-purple-700 dark:text-purple-300 text-sm font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5"/>
            </svg>
            Editar
          <% end %>

          <%= link_to staff_switch_company_path(company), 
              class: "flex-1 inline-flex items-center justify-center px-3 py-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 text-sm font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l4-4 4 4m0 6l-4 4-4-4"/>
            </svg>
            Acessar
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @companies.empty? %>
    <div class="text-center py-12">
      <div class="w-24 h-24 bg-stone-100 dark:bg-stone-800 rounded-full flex items-center justify-center mx-auto mb-4">
        <svg class="w-12 h-12 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 7V3H2v18h20V7H12z"/>
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-stone-900 dark:text-stone-100 mb-2">
        Nenhuma clínica encontrada
      </h3>
      <p class="text-stone-600 dark:text-stone-400 mb-6">
        Comece criando a primeira clínica do sistema.
      </p>
      <%= link_to new_staff_company_path, 
          class: "inline-flex items-center px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-xl transition-colors" do %>
        <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        </svg>
        Criar Primeira Clínica
      <% end %>
    </div>
  <% end %>
</div>

<!-- app/views/staff/companies/_form.html.erb -->
<div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
  <%= form_with model: [:staff, company], class: "space-y-6" do |form| %>
    <% if company.errors.any? %>
      <div class="bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-800 rounded-xl p-4">
        <div class="flex items-start">
          <svg class="w-5 h-5 text-red-600 dark:text-red-400 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
          <div>
            <h3 class="text-red-800 dark:text-red-200 font-semibold mb-2">
              Erro ao salvar (<%= pluralize(company.errors.count, "erro") %>):
            </h3>
            <ul class="text-red-700 dark:text-red-300 text-sm space-y-1">
              <% company.errors.full_messages.each do |message| %>
                <li>• <%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Nome -->
      <div class="lg:col-span-2">
        <%= form.label :name, "Nome da Clínica *", class: "block text-sm font-semibold text-stone-700 dark:text-stone-300 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full bg-white dark:bg-stone-800 border border-stone-300 dark:border-stone-700 rounded-xl px-4 py-3 text-stone-900 dark:text-stone-100 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
            placeholder: "Ex: Clínica Veterinária São Francisco",
            required: true %>
      </div>

      <!-- CNPJ -->
      <div>
        <%= form.label :cnpj, "CNPJ *", class: "block text-sm font-semibold text-stone-700 dark:text-stone-300 mb-2" %>
        <%= form.text_field :cnpj, 
            class: "w-full bg-white dark:bg-stone-800 border border-stone-300 dark:border-stone-700 rounded-xl px-4 py-3 text-stone-900 dark:text-stone-100 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all font-mono",
            placeholder: "00.000.000/0000-00",
            required: true %>
      </div>

      <!-- Email -->
      <div>
        <%= form.label :email, "E-mail *", class: "block text-sm font-semibold text-stone-700 dark:text-stone-300 mb-2" %>
        <%= form.email_field :email, 
            class: "w-full bg-white dark:bg-stone-800 border border-stone-300 dark:border-stone-700 rounded-xl px-4 py-3 text-stone-900 dark:text-stone-100 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
            placeholder: "contato@clinica.com",
            required: true %>
      </div>

      <!-- Telefone -->
      <div>
        <%= form.label :phone, "Telefone *", class: "block text-sm font-semibold text-stone-700 dark:text-stone-300 mb-2" %>
        <%= form.telephone_field :phone, 
            class: "w-full bg-white dark:bg-stone-800 border border-stone-300 dark:border-stone-700 rounded-xl px-4 py-3 text-stone-900 dark:text-stone-100 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all",
            placeholder: "(00) 00000-0000",
            required: true %>
      </div>

      <!-- Status -->
      <div class="flex items-center space-x-3">
        <%= form.check_box :active, 
            class: "w-5 h-5 text-purple-600 bg-white dark:bg-stone-800 border border-stone-300 dark:border-stone-700 rounded focus:ring-purple-500 focus:ring-2",
            checked: company.active.nil? ? true : company.active %>
        <%= form.label :active, "Clínica Ativa", class: "text-sm font-semibold text-stone-700 dark:text-stone-300" %>
      </div>

      <!-- Endereço -->
      <div class="lg:col-span-2">
        <%= form.label :address, "Endereço Completo", class: "block text-sm font-semibold text-stone-700 dark:text-stone-300 mb-2" %>
        <%= form.text_area :address, 
            rows: 3,
            class: "w-full bg-white dark:bg-stone-800 border border-stone-300 dark:border-stone-700 rounded-xl px-4 py-3 text-stone-900 dark:text-stone-100 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all resize-none",
            placeholder: "Rua, número, bairro, cidade, estado, CEP" %>
      </div>
    </div>

    <!-- Submit Buttons -->
