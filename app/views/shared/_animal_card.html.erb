<!-- app/views/shared/_animal_card.html.erb - Improved -->
<div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-4 lg:p-6 shadow-sm hover:shadow-lg transition-all group">
  <div class="flex items-start gap-4">
    <!-- Animal Photo -->
    <div class="flex-shrink-0">
      <% if animal.photo.attached? %>
        <%= image_tag animal.photo, class: "w-16 h-16 lg:w-20 lg:h-20 rounded-xl object-cover shadow-md" %>
      <% else %>
        <div class="w-16 h-16 lg:w-20 lg:h-20 bg-gradient-to-br from-stone-200 to-stone-300 dark:from-stone-700 dark:to-stone-800 rounded-xl flex items-center justify-center shadow-md">
          <svg class="w-8 h-8 lg:w-10 lg:h-10 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Animal Info -->
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between mb-3">
        <div class="flex-1">
          <h3 class="text-lg lg:text-xl font-bold text-stone-900 dark:text-stone-100 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
            <%= link_to animal.name, animal_path(animal), class: "block truncate" %>
          </h3>
          <p class="text-sm text-stone-600 dark:text-stone-400 mt-1">
            <span class="inline-flex items-center space-x-1">
              <span><%= animal.species %></span>
              <span>•</span>
              <span><%= animal.breed %></span>
            </span>
          </p>
          <p class="text-xs text-stone-500 dark:text-stone-400 mt-2 flex items-center space-x-3">
            <span class="inline-flex items-center space-x-1">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
              </svg>
              <span><%= animal.age_in_years %> anos</span>
            </span>
            <span class="inline-flex items-center space-x-1">
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd"/>
              </svg>
              <span><%= number_with_precision(animal.weight, precision: 1) %>kg</span>
            </span>
          </p>
        </div>        
      </div>
      
      <!-- Vaccination Status -->
      <div class="mb-4">
        <% if animal.vaccinations.any? %>
          <% last_vaccination = animal.vaccinations.recent.first %>
          <div class="bg-green-50 dark:bg-green-950/30 border border-green-200 dark:border-green-800 rounded-lg p-3">
            <div class="flex items-center justify-between">
              <div>
                <p class="text-xs text-green-700 dark:text-green-300 font-medium">Última Vacinação</p>
                <p class="text-sm font-semibold text-green-800 dark:text-green-200 mt-1">
                  <%= last_vaccination.vaccine_name %>
                </p>
                <p class="text-xs text-green-600 dark:text-green-400 mt-1">
                  <%= last_vaccination.application_date.strftime("%d/%m/%Y") %>
                </p>
              </div>
              <div class="text-green-600 dark:text-green-400">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
              </div>
            </div>
          </div>
        <% else %>
          <div class="bg-yellow-50 dark:bg-yellow-950/30 border border-yellow-200 dark:border-yellow-800 rounded-lg p-3">
            <div class="flex items-center space-x-2">
              <svg class="w-4 h-4 text-yellow-600 dark:text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
              </svg>
              <p class="text-xs text-yellow-700 dark:text-yellow-300 font-medium">Sem vacinações registradas</p>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Owner Info -->
      <% if animal.owner_name.present? %>
        <div class="border-t border-stone-200 dark:border-stone-800 pt-3">
          <p class="text-xs text-stone-500 dark:text-stone-400 font-medium mb-1">Proprietário</p>
          <p class="text-sm text-stone-700 dark:text-stone-300"><%= animal.owner_name %></p>
          <% if animal.owner_phone.present? %>
            <p class="text-xs text-stone-500 dark:text-stone-400 mt-1">
              <%= animal.owner_phone %>
            </p>
          <% end %>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="grid grid-cols-2 gap-2 mt-4">
        <%= link_to animal_path(animal), 
            class: "inline-flex items-center justify-center px-3 py-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 text-sm font-medium rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Ver Detalhes
        <% end %>
        
        <%= link_to new_animal_vaccination_path(animal), 
            class: "inline-flex items-center justify-center px-3 py-2 bg-green-100 dark:bg-green-950/50 hover:bg-green-200 dark:hover:bg-green-900/50 text-green-700 dark:text-green-300 text-sm font-medium rounded-lg transition-colors" do %>
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
          </svg>
          Nova Vacina
        <% end %>
        
        <!-- NOVOS BOTÕES - Carteirinhas -->
        <%= link_to vaccination_card_animal_path(animal, format: 'portrait'), 
            class: "inline-flex items-center justify-center px-3 py-2 bg-purple-100 dark:bg-purple-950/50 hover:bg-purple-200 dark:hover:bg-purple-900/50 text-purple-700 dark:text-purple-300 text-sm font-medium rounded-lg transition-colors",
            target: "_blank" do %>
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
          </svg>
          Carteirinha
        <% end %>
        
        <%= link_to qr_code_animal_path(animal), 
            class: "inline-flex items-center justify-center px-3 py-2 bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-700 dark:text-stone-300 text-sm font-medium rounded-lg transition-colors",
            target: "_blank" do %>
          <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 24 24">
            <path d="M3 11h8V3H3v8zm2-6h4v4H5V5zm-2 8h8v8H3v-8zm2 2v4h4v-4H5zm8-12v8h8V3h-8zm2 2h4v4h-4V5zm6 6h2v2h-2v-2zm0 2h2v2h-2v-2zm-2 0h2v2h-2v-2zm2 2h2v2h-2v-2zm0 2h2v2h-2v-2z"/>
          </svg>
          QR Code
        <% end %>
      </div>
    </div>
  </div>
</div>
