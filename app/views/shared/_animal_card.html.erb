<!-- app/views/shared/_animal_card.html.erb -->
<div class="bg-gray-800 rounded-2xl p-4 mb-3 border border-gray-700 hover:border-gray-600 transition-all">
  <div class="flex items-start space-x-3">
    <!-- Animal Photo -->
    <div class="flex-shrink-0">
      <% if animal.photo.attached? %>
        <%= image_tag animal.photo, class: "w-16 h-16 rounded-xl object-cover" %>
      <% else %>
        <div class="w-16 h-16 bg-gray-700 rounded-xl flex items-center justify-center">
          <svg class="w-8 h-8 text-gray-400" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.94-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
          </svg>
        </div>
      <% end %>
    </div>

    <!-- Animal Info -->
    <div class="flex-1 min-w-0">
      <div class="flex justify-between items-start">
        <div>
          <h3 class="text-lg font-semibold text-white truncate"><%= animal.name %></h3>
          <p class="text-sm text-gray-400"><%= animal.species %> • <%= animal.breed %></p>
          <p class="text-xs text-gray-500 mt-1">
            <%= animal.age_in_years %> anos • <%= number_with_precision(animal.weight, precision: 1) %>kg
          </p>
        </div>
        
        <!-- QR Code Button -->
        <%= link_to animal_qr_code_path(animal), 
            class: "p-2 bg-blue-500 rounded-lg hover:bg-blue-600 transition-colors",
            target: "_blank" do %>
          <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M3 11h8V3H3v8zm2-6h4v4H5V5zm-2 8h8v8H3v-8zm2 2v4h4v-4H5zm8-12v8h8V3h-8zm2 2h4v4h-4V5zm6 6h2v2h-2v-2zm0 2h2v2h-2v-2zm-2 0h2v2h-2v-2zm2 2h2v2h-2v-2zm0 2h2v2h-2v-2z"/>
          </svg>
        <% end %>
      </div>
      
      <!-- Last Vaccination -->
      <% if animal.vaccinations.any? %>
        <div class="mt-3 p-2 bg-gray-700 rounded-lg">
          <p class="text-xs text-gray-400">Última vacinação:</p>
          <p class="text-sm text-white"><%= animal.vaccinations.recent.first.vaccine_name %></p>
          <p class="text-xs text-gray-400"><%= animal.vaccinations.recent.first.application_date.strftime("%d/%m/%Y") %></p>
        </div>
      <% else %>
        <div class="mt-3 p-2 bg-yellow-900/30 border border-yellow-700 rounded-lg">
          <p class="text-xs text-yellow-400">Nenhuma vacinação registrada</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex space-x-2 mt-4">
    <%= link_to animal, class: "flex-1 bg-blue-500 hover:bg-blue-600 text-white text-sm font-medium py-2 px-3 rounded-lg text-center transition-colors" do %>
      Ver Detalhes
    <% end %>
    <%= link_to new_animal_vaccination_path(animal), class: "flex-1 bg-green-500 hover:bg-green-600 text-white text-sm font-medium py-2 px-3 rounded-lg text-center transition-colors" do %>
      Nova Vacina
    <% end %>
  </div>
</div>