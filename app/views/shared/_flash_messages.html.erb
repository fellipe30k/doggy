<!-- app/views/shared/_flash_messages.html.erb -->
<% if notice %>
  <div class="fixed top-20 left-4 right-4 z-40 bg-green-500/90 backdrop-blur-sm text-white px-4 py-3 rounded-lg shadow-lg border border-green-400" data-turbo-temporary>
    <div class="flex items-center space-x-2">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
      </svg>
      <span><%= notice %></span>
    </div>
  </div>
<% end %>

<% if alert %>
  <div class="fixed top-20 left-4 right-4 z-40 bg-red-500/90 backdrop-blur-sm text-white px-4 py-3 rounded-lg shadow-lg border border-red-400" data-turbo-temporary>
    <div class="flex items-center space-x-2">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
      </svg>
      <span><%= alert %></span>
    </div>
  </div>
<% end %>

<script>
  // Auto-hide flash messages
  document.addEventListener('DOMContentLoaded', function() {
    const flashMessages = document.querySelectorAll('[data-turbo-temporary]');
    flashMessages.forEach(message => {
      setTimeout(() => {
        message.style.transition = 'opacity 0.5s ease-out, transform 0.5s ease-out';
        message.style.opacity = '0';
        message.style.transform = 'translateY(-20px)';
        setTimeout(() => message.remove(), 500);
      }, 4000);
    });
  });
</script>