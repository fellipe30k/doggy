<!-- app/views/animals/show.html.erb -->
<div class="space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <%= link_to animals_path, 
          class: "p-2 bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-xl hover:bg-stone-50 dark:hover:bg-stone-800 transition-colors" do %>
        <svg class="w-5 h-5 text-stone-600 dark:text-stone-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
      <% end %>
      <div>
        <h1 class="text-2xl lg:text-3xl font-bold text-stone-900 dark:text-stone-100"><%= @animal.name %></h1>
        <p class="text-stone-600 dark:text-stone-400 mt-1">
          <%= @animal.species %> • <%= @animal.breed %>
        </p>
      </div>
    </div>
    
    <div class="flex gap-2">
      <%= link_to edit_animal_path(@animal), 
          class: "inline-flex items-center px-4 py-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 font-medium rounded-xl transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Editar
      <% end %>
      
      <%= link_to new_animal_vaccination_path(@animal), 
          class: "inline-flex items-center px-4 py-2 bg-green-100 dark:bg-green-950/50 hover:bg-green-200 dark:hover:bg-green-900/50 text-green-700 dark:text-green-300 font-medium rounded-xl transition-colors" do %>
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
        </svg>
        Nova Vacina
      <% end %>
    </div>
  </div>

  <!-- Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Animal Info -->
    <div class="lg:col-span-1 space-y-6">
      <!-- Photo -->
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <div class="text-center">
          <% if @animal.photo.attached? %>
            <%= image_tag @animal.photo, class: "w-32 h-32 lg:w-40 lg:h-40 rounded-2xl object-cover mx-auto shadow-lg" %>
          <% else %>
            <div class="w-32 h-32 lg:w-40 lg:h-40 bg-gradient-to-br from-stone-200 to-stone-300 dark:from-stone-700 dark:to-stone-800 rounded-2xl flex items-center justify-center mx-auto shadow-lg">
              <svg class="w-16 h-16 lg:w-20 lg:h-20 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2z"/>
              </svg>
            </div>
          <% end %>
        </div>
        
        <!-- QR Code -->
        <div class="mt-6 text-center">
          <%= link_to qr_code_animal_path(id: @animal.id), 
              class: "inline-flex items-center px-4 py-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-700 dark:text-blue-300 font-medium rounded-xl transition-colors",
              target: "_blank" do %>
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M3 11h8V3H3v8zm2-6h4v4H5V5zm-2 8h8v8H3v-8zm2 2v4h4v-4H5zm8-12v8h8V3h-8zm2 2h4v4h-4V5zm6 6h2v2h-2v-2zm0 2h2v2h-2v-2zm-2 0h2v2h-2v-2zm2 2h2v2h-2v-2zm0 2h2v2h-2v-2z"/>
            </svg>
            Gerar QR Code
          <% end %>
          <p class="text-xs text-stone-500 dark:text-stone-400 mt-2">Para acesso do proprietário</p>
        </div>
      </div>

      <!-- Basic Info -->
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-4">Informações Básicas</h2>
        
        <div class="space-y-4">
          <div class="grid grid-cols-2 gap-4">
            <div>
              <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Idade</p>
              <p class="text-lg text-stone-900 dark:text-stone-100">
                <%= @animal.age_in_years %> anos
              </p>
            </div>
            
            <div>
              <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Peso</p>
              <p class="text-lg text-stone-900 dark:text-stone-100">
                <%= number_with_precision(@animal.weight, precision: 1) %>kg
              </p>
            </div>
          </div>
          
          <div>
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Cor</p>
            <p class="text-lg text-stone-900 dark:text-stone-100">
              <%= @animal.color || "Não informado" %>
            </p>
          </div>
          
          <% if @animal.microchip.present? %>
            <div>
              <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Microchip</p>
              <p class="text-lg text-stone-900 dark:text-stone-100 font-mono">
                <%= @animal.microchip %>
              </p>
            </div>
          <% end %>
          
          <div>
            <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Data de Nascimento</p>
            <p class="text-lg text-stone-900 dark:text-stone-100">
              <%= @animal.birth_date.strftime("%d/%m/%Y") %>
            </p>
          </div>
        </div>
      </div>

      <!-- Owner Info -->
      <% if @animal.owner_name.present? %>
        <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
          <h2 class="text-lg font-bold text-stone-900 dark:text-stone-100 mb-4">Proprietário</h2>
          
          <div class="space-y-3">
            <div>
              <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Nome</p>
              <p class="text-lg text-stone-900 dark:text-stone-100">
                <%= @animal.owner_name %>
              </p>
            </div>
            
            <% if @animal.owner_phone.present? %>
              <div>
                <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">Telefone</p>
                <p class="text-lg text-stone-900 dark:text-stone-100">
                  <%= link_to "tel:#{@animal.owner_phone}", class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors" do %>
                    <%= @animal.owner_phone %>
                  <% end %>
                </p>
              </div>
            <% end %>
            
            <% if @animal.owner_email.present? %>
              <div>
                <p class="text-sm font-semibold text-stone-700 dark:text-stone-300 mb-1">E-mail</p>
                <p class="text-lg text-stone-900 dark:text-stone-100">
                  <%= link_to "mailto:#{@animal.owner_email}", class: "hover:text-blue-600 dark:hover:text-blue-400 transition-colors" do %>
                    <%= @animal.owner_email %>
                  <% end %>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Vaccinations -->
    <div class="lg:col-span-2">
      <div class="bg-white dark:bg-stone-900 border border-stone-200 dark:border-stone-800 rounded-2xl p-6 shadow-sm">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-xl font-bold text-stone-900 dark:text-stone-100">Histórico de Vacinações</h2>
          <%= link_to new_animal_vaccination_path(@animal), 
              class: "inline-flex items-center px-3 py-2 bg-green-100 dark:bg-green-950/50 hover:bg-green-200 dark:hover:bg-green-900/50 text-green-700 dark:text-green-300 font-medium rounded-lg transition-colors" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
            </svg>
            Nova Vacinação
          <% end %>
        </div>
        
        <% if @vaccinations.any? %>
          <div class="space-y-4">
            <% @vaccinations.each do |vaccination| %>
              <div class="border border-stone-200 dark:border-stone-800 rounded-xl p-4 hover:bg-stone-50 dark:hover:bg-stone-800/50 transition-colors">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-stone-900 dark:text-stone-100 mb-1">
                      <%= vaccination.vaccine_name %>
                    </h3>
                    <p class="text-sm text-stone-600 dark:text-stone-400 mb-2">
                      <%= vaccination.vaccine_brand %>
                    </p>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
                      <div>
                        <p class="text-stone-500 dark:text-stone-400 font-medium">Aplicação</p>
                        <p class="text-stone-900 dark:text-stone-100">
                          <%= vaccination.application_date.strftime("%d/%m/%Y") %>
                        </p>
                      </div>
                      
                      <% if vaccination.next_dose_date %>
                        <div>
                          <p class="text-stone-500 dark:text-stone-400 font-medium">Próxima Dose</p>
                          <p class="text-stone-900 dark:text-stone-100 <%= 'text-red-600 dark:text-red-400 font-semibold' if vaccination.overdue? %>">
                            <%= vaccination.next_dose_date.strftime("%d/%m/%Y") %>
                            <% if vaccination.overdue? %>
                              <span class="text-xs">(Atrasada)</span>
                            <% end %>
                          </p>
                        </div>
                      <% end %>
                      
                      <div>
                        <p class="text-stone-500 dark:text-stone-400 font-medium">Veterinário</p>
                        <p class="text-stone-900 dark:text-stone-100">
                          <%= vaccination.veterinarian_name %>
                        </p>
                      </div>
                      
                      <div>
                        <p class="text-stone-500 dark:text-stone-400 font-medium">Lote</p>
                        <p class="text-stone-900 dark:text-stone-100 font-mono text-xs">
                          <%= vaccination.batch_number %>
                        </p>
                      </div>
                    </div>
                    
                    <% if vaccination.observations.present? %>
                      <div class="mt-3 pt-3 border-t border-stone-200 dark:border-stone-800">
                        <p class="text-stone-500 dark:text-stone-400 font-medium text-sm mb-1">Observações</p>
                        <p class="text-stone-700 dark:text-stone-300 text-sm">
                          <%= simple_format(vaccination.observations) %>
                        </p>
                      </div>
                    <% end %>
                  </div>
                  
                  <div class="flex gap-2 ml-4">
                    <%= link_to vaccination_path(vaccination), 
                        class: "p-2 bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-600 dark:text-stone-400 rounded-lg transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                      </svg>
                    <% end %>
                    
                    <%= link_to edit_vaccination_path(vaccination), 
                        class: "p-2 bg-blue-100 dark:bg-blue-950/50 hover:bg-blue-200 dark:hover:bg-blue-900/50 text-blue-600 dark:text-blue-400 rounded-lg transition-colors" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5"/>
                      </svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
          
          <% if @animal.vaccinations.count > 10 %>
            <div class="text-center mt-6">
              <%= link_to animal_vaccinations_path(@animal), 
                  class: "inline-flex items-center px-4 py-2 bg-stone-100 dark:bg-stone-800 hover:bg-stone-200 dark:hover:bg-stone-700 text-stone-700 dark:text-stone-300 font-medium rounded-lg transition-colors" do %>
                Ver Todas as Vacinações
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <div class="w-16 h-16 bg-stone-100 dark:bg-stone-800 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-stone-400 dark:text-stone-500" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2z"/>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-stone-900 dark:text-stone-100 mb-2">
              Nenhuma vacinação registrada
            </h3>
            <p class="text-stone-600 dark:text-stone-400 mb-4">
              Registre a primeira vacinação deste animal.
            </p>
            <%= link_to new_animal_vaccination_path(@animal), 
                class: "inline-flex items-center px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition-colors" do %>
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/>
              </svg>
              Registrar Primeira Vacinação
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>